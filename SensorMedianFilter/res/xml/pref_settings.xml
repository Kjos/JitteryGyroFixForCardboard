<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 <PreferenceCategory
   android:title="Gyroscope Sensor Filter Settings"
   android:summary="Setup the settings of the gyroscope filter" >
   <ListPreference 
    android:key="filter_type"
    android:title="@string/pref_title_filter_type"
    android:summary="@string/pref_summary_filter_type"
    android:entries="@array/filter_type_options"
    android:entryValues="@array/filter_type_options_alias"
    android:defaultValue="@string/filter_type_default"/>
   <EditTextPreference
    android:key="filter_size"
    android:title="@string/pref_title_filter_size"
    android:summary="@string/pref_summary_filter_size"
    android:numeric="integer"
    android:maxLength="4"
    android:defaultValue="@string/filter_size_default"
	/>
   <EditTextPreference
    android:key="filter_alpha"
    android:title="@string/pref_title_filter_alpha"
    android:summary="@string/pref_summary_filter_alpha"
    android:maxLength="5"
    android:defaultValue="@string/filter_alpha_default"
	/>
 </PreferenceCategory>

 <PreferenceCategory
   android:title="Other Settings"
   android:summary="Setup other anti-jittering options (independently of the filter)" >
   <EditTextPreference
    android:key="filter_min_change"
    android:title="@string/pref_title_filter_min_change"
    android:summary="@string/pref_summary_filter_min_change"
    android:maxLength="15"
    android:defaultValue="@string/filter_min_change_default"
	/>
 </PreferenceCategory>
</PreferenceScreen>